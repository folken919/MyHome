<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_lights"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/fondo"
    tools:context="com.example.arengifo.myhome.Lights">

    <TextView
        android:text="OFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switchStatus"
        android:layout_below="@+id/light"
        android:layout_alignRight="@+id/light"
        android:layout_alignEnd="@+id/light"
        android:layout_marginRight="11dp"
        android:layout_marginEnd="11dp"
        android:textSize="@dimen/activity_vertical_margin" />

    <android.support.v7.widget.Toolbar
        android:background="@drawable/layoutborder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="?attr/actionBarTheme"
        android:minHeight="?attr/actionBarSize"
        android:id="@+id/toolbar3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Switch
        android:text="Switch"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:id="@+id/light"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/toolbar3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_edit"
        android:id="@+id/btn_edit"
        android:backgroundTint="@android:color/holo_green_dark"
        android:layout_alignBottom="@+id/toolbar3"
        android:layout_toLeftOf="@+id/btn_delete"
        android:layout_toStartOf="@+id/btn_delete" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_delete"
        android:id="@+id/btn_delete"
        android:backgroundTint="@android:color/holo_red_dark"
        android:layout_alignBottom="@+id/toolbar3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_rotate"
        android:layout_alignTop="@+id/btn_edit"
        android:layout_toLeftOf="@+id/btn_edit"
        android:layout_toStartOf="@+id/btn_edit"
        android:id="@+id/imageButton3"
        android:backgroundTint="?android:attr/colorPressedHighlight"
        android:layout_above="@+id/light" />

</RelativeLayout>
